<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#308014">

    <LinearLayout
        android:id="@+id/rr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row1"
        android:orientation="horizontal">





    </LinearLayout>
    <ImageView
        android:layout_width="320dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/wel2"
        android:id="@+id/imageView2"
       android:layout_centerHorizontal="true"
        />
    <LinearLayout

        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp">

        <!-- can be used like this also if your layout doesnt have anything in it-->
        <com.dshantanu.androidsquareslib.AndroidSquares
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_margin="8dp"
            android:layout_weight="1"

            android:elevation="8dp"
            android:padding="5dp" >

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginTop="10dp"

                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ll_ro1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">

                    <com.dshantanu.androidsquareslib.AndroidSquares
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:elevation="8dp"
                        android:padding="5dp"
                        android:clickable="true"

                        android:foreground="@drawable/slot"
                        android:id="@+id/a"

                        />
                    <!-- can be used like this also if your layout doesnt have anything in it-->
                    <com.dshantanu.androidsquareslib.AndroidSquares
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="#8BC34A"
                        android:elevation="8dp"
                        android:padding="5dp"
                        android:id="@+id/b"
                        android:foreground="@drawable/roul">



                    </com.dshantanu.androidsquareslib.AndroidSquares>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_ro1"
                    android:orientation="horizontal">

                    <com.dshantanu.androidsquareslib.AndroidSquares
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="#8BC34A"
                        android:elevation="8dp"
                        android:padding="5dp"
                        android:id="@+id/c"
                        android:foreground="@drawable/black"/>

                    <com.dshantanu.androidsquareslib.AndroidSquares
                        android:layout_width="0dip"
                        android:layout_height="0dip"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="#2196F3"
                        android:elevation="8dp"
                        android:padding="5dp"
                        android:id="@+id/d"
                        android:foreground="@drawable/pay"/>

                </LinearLayout>
            </RelativeLayout>


        </com.dshantanu.androidsquareslib.AndroidSquares>


    </LinearLayout>




</RelativeLayout>